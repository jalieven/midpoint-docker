<c:objects
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3"
        xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
        xmlns:cap="http://midpoint.evolveum.com/xml/ns/public/resource/capabilities-3"
        xmlns:org="http://midpoint.evolveum.com/xml/ns/public/common/org-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        xmlns:mext="http://midpoint.evolveum.com/xml/ns/public/model/extension-3"
        xmlns:didmu="http://didm.be/xml/ns/user">

    <!-- Mapping between Privileges and technical Roles (the latter needs to be synced in LDAP as group) -->

    <role oid="6dce0c5b-3668-4ee3-811b-818481855eb4">
        <name>VIP</name>
        <description>VIP Profile (i.e. mapping from privilege to technical roles)</description>

        <assignment>
            <targetRef oid="20bb2e95-a622-4833-b0c8-5e95407e08e8" type="RoleType" />
        </assignment>

    </role>

    <role oid="20bb2e95-a622-4833-b0c8-5e95407e08e8">
        <name>JiraUser</name>
        <description>Access to Jira</description>
        <requestable>true</requestable>

        <!--
            This section makes sure the user account is synced into OpenDJ when this Role is assigned
            to the user. It also contains configuration on the groups it should be associated with.
        -->
        <inducement id="1">
           <construction>
               <resourceRef oid="d0811790-6420-11e4-86b2-3c9755567874" type="c:ResourceType" />
               <kind>account</kind>
               <intent>ldap</intent>
               <association>
                   <c:ref>ri:group</c:ref>
                   <outbound>
                       <strength>strong</strength>
                       <expression>
                           <associationFromLink>
                               <projectionDiscriminator>
                                   <kind>entitlement</kind>
                                   <intent>group</intent>
                               </projectionDiscriminator>
                           </associationFromLink>
                       </expression>
                   </outbound>
               </association>
           </construction>
           <order>3</order>
           <focusType>c:UserType</focusType>
        </inducement>

       <inducement id="666">
           <!--
                FIXME: WHY DOES THIS RESULT IN THE CREATION OF THE GROUP WITH INTENT: privilege 20001-Milieumedewerker-01 in LDAP
                FIXME: IT CLEARLY STATES INTENT: group
           -->
           <construction>
               <resourceRef oid="d0811790-6420-11e4-86b2-3c9755567874" type="c:ResourceType" />
               <kind>entitlement</kind>
               <intent>group</intent>
               <attribute>
                   <c:ref>ri:description</c:ref>
                   <outbound>
                       <strength>strong</strength>
                       <expression>
                           <script xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="c:ScriptExpressionEvaluatorType">
                               <code>
                                   return "JiraUser"
                               </code>
                           </script>
                       </expression>
                   </outbound>
               </attribute>
           </construction>
           <order>2</order>
           <focusType>c:RoleType</focusType>
       </inducement>

    </role>

</c:objects>
